<div class="col-lg-12 text-center">
	<div id="title">Procura de Funcionários Secretaria do Meio Ambiente</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-lg-12 text-center">
			<form class="form-inline">
				<div class="form-group">
					{{input value = nome placeholder="Nome do funcionário" class="form-control"}}
				</div>
				<button type="submit" class="btn btn-default"{{action 'search'}}>BUSCAR</button>
			</form>
		</div>
	</div>
	<div class="row">
		{{#if model}}
		<div class="col-lg-12 table">
			<table class="table table-striped"> 
				<thead> 
					<tr> 
						<th>Nome</th> 
						<th>Divisão</th> 
						<th>Email</th> 
						<th>Email Pessoal</th>
						<th>Local Fisíco</th> 
						<th>Ramal</th>
					</tr> 
				</thead> 

				<tbody>
					{{#each model as |person|}} 
					<tr> 
						<th scope="row">{{person.nome}}</th> 
						<td>{{person.divisao}}</td> 
						<td>{{person.email}}</td> 
						<td>{{person.emailPessoal}}</td>
						<td>{{person.localFisico}}</td> 
						<td>{{person.ramal}}</td> 
					</tr>
					{{/each}}
				</tbody> 
			</table>
		</div>
		{{/if}}
		{{erro}}
	</div>	
</div>
{{outlet}}

