<div class="col-lg-12 text-center">
	<div id="title">Procura de Funcionários Secretaria do Meio Ambiente</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-lg-12 text-center">
			<form class="form-inline">
				<div class="form-group">
					{{input value = nome placeholder="Nome do funcionário" class="form-control"}}
				</div>
				<button type="submit" class="btn btn-default"{{action 'search'}}>BUSCAR</button>
			</form>
		</div>
	</div>
	<div class="row">
		{{#if model}}
		<div class="col-lg-12 table">
			<table class="table table-striped"> 
				<thead> 
					<tr> 
						<th>Nome</th> 
						<th>Divisão</th> 
						<th>Email</th> 
						<th>Ramal</th>
					</tr> 
				</thead> 

				<tbody>
					{{#each model as |person|}} 
					<tr> 
						<th scope="row"><button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#{{person.divModal}}">{{person.nome}}</button></th> 
						<td>{{person.divisao}}</td> 
						<td>{{person.email}}</td> 						 
						<td>{{person.ramal}}</td>
					</tr>

					<!--modal-->
					<div class="modal fade" id="{{person.divModal}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
					  <div class="modal-dialog" role="document">
					    <div class="modal-content">
					      <div class="modal-header">
					        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					        <h4 class="modal-title" id="myModalLabel">{{person.nome}}</h4>
					      </div>
					      <div class="modal-body">

					      	<div class="row">
					        	<div class="col-md-4"><img src="https://upload.wikimedia.org/wikipedia/en/e/ee/Unknown-person.gif" alt="Funcionario" class="person-image"></div>
					          
					          	<div class="col-md-7"><span>Divisão: {{person.divisao}}</span></div>
					          	<div class="col-md-7"><span>Email: {{person.email}}</span></div>
					          	<div class="col-md-7"><span>Ramal: {{person.ramal}}</span></div>
					          	<div class="col-md-7"><span>Email Pessoal: {{person.emailPessoal}}</span></div>
					          	<div class="col-md-7"><span>Local Fisico: {{person.localFisico}}</span></div>
					          
					        </div>

					      </div>
					      <div class="modal-footer">
					        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
					        <a href="http://10.25.192.114:8080/sipweb/trabalhador/login.xhtml" target="_blank"><button type="button" class="btn btn-primary">Alterar Cadastro</button></a>
					      </div>
					    </div>
					  </div>
					</div>

					{{/each}}
				</tbody> 
			</table>
		</div>
		{{/if}}
		{{erro}}
	</div>	
</div>



{{outlet}}

