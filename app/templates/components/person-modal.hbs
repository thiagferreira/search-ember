{{yeld}}
<div class="modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" {{action "closeModal"}} aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">{{model.nome}}</h4>
      </div>
      <div class="modal-body">

      	<div class="row">
						{{#if model.foto}}
	        		<div class="col-sm-4 text-center">
								<img src="data:image/gif;base64,{{model.foto}}" alt="Funcionario" class="person-image">
							</div>
						{{else}}
							<div class="col-sm-4 text-center">
								<img src="https://upload.wikimedia.org/wikipedia/en/e/ee/Unknown-person.gif" alt="Funcionario" class="person-image">
							</div>
						{{/if}}

          	<div class="col-md-7"><span>ÁREA: {{model.divisao}}</span></div>
          	<div class="col-md-7"><span>RAMAL: {{model.ramal}}</span></div>
          	<div class="col-md-7"><span>E-MAIL: {{model.email}}</span></div>
          	<div class="col-md-7"><span>PRÉDIO/ANDAR/SALA: {{model.localFisico}}</span></div>

        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" {{action "closeModal"}}>Fechar</button>
      </div>
    </div>
  </div>
</div>
